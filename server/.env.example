# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/secureauth-gateway
MONGODB_URI_TEST=mongodb://localhost:27017/secureauth-gateway-test

# ============================================
# JWT CONFIGURATION (Payment-Grade Security)
# ============================================
JWT_ACCESS_SECRET=your-super-secret-access-token-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-min-32-characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# COOKIE CONFIGURATION
# ============================================
COOKIE_SECRET=your-super-secret-cookie-key-min-32-characters
COOKIE_MAX_AGE=604800000

# ============================================
# OAUTH 2.0 - GOOGLE
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ============================================
# FRONTEND URL (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
